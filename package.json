{
  "name": "@inkrypt/opaque-wasm-root",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "wasm-pack build --dev && pnpm run merge-pkg-meta",
    "dev:vite-client": "pnpm --filter opaque-wasm-vite-client-example dev",
    "build": "rm -rf ./pkg && wasm-pack build && pnpm run merge-pkg-meta",
    "check": "pnpm exec biome check && cargo fmt --check",
    "format": "pnpm exec biome check --write && cargo fmt",
    "merge-pkg-meta": "pnpm tsx scripts/merge-package.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "@types/node": "^24.3.0",
    "tsx": "^4.19.1"
  },
  "packageManager": "pnpm@10.15.0"
}
